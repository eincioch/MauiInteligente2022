<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://schemas.microsoft.com/dotnet/2021/maui/design"
             x:Class="MauiInteligente2022.Views.LoginPage"
             xmlns:vm="clr-namespace:MauiInteligente2022.ViewModels"
             xmlns:loc="clr-namespace:MauiInteligente2022.Localization"
             Title="{Binding Title}">
    <d:ContentPage.BindingContext>
        <vm:LoginViewModel />
    </d:ContentPage.BindingContext>
    
    <VerticalStackLayout Margin="30" Spacing="10">
        <Image Source="users" HeightRequest="200" WidthRequest="200" HorizontalOptions="Center" />

        <Border Padding="5" StrokeThickness="4" StrokeShape="RoundRectangle 10">
            <VerticalStackLayout Spacing="15">
                <Entry Placeholder="Usuario" Text="{Binding UserName}" />
                <Entry Placeholder="Contraseña" IsPassword="True" Text="{Binding Password}" />
                <Button Text="Iniciar Sesión" Command="{Binding LoginCommand}" />
            </VerticalStackLayout>
        </Border>
    </VerticalStackLayout>
</ContentPage>