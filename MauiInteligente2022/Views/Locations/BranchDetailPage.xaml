<?xml version="1.0" encoding="utf-8" ?>
<controls:BindedPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:MauiInteligente2022.AppBase.Controls"
             xmlns:res="clr-namespace:MauiInteligente2022.Localization"
             x:Class="MauiInteligente2022.Views.BranchDetailPage">
    <Grid RowDefinitions="20,auto,*,auto,30">
        <Label Grid.Row="0" Text="Name" />
        <Label Grid.Row="1" Text="Location" />
        <Map x:Name="MyMap" Grid.Row="2" IsShowingUser="True" />
        <Button Grid.Row="3" Text="{x:Static res:Resources.LocationShowRoute}" Command="{Binding ShowRouteCommand}" />
    </Grid>
</controls:BindedPage>